<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#212121"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Etiqueta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gridLayout"
            android:layout_marginBottom="14dp"
            android:height="100dp"
            android:textAlignment="textEnd"
            android:textColor="#F5F5F5"
            android:textSize="36dp"
            android:layout_centerHorizontal="true" />



    <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:columnCount="4"
            android:orientation="horizontal"
            android:padding="0dp"
            android:rowCount="6">

            <Button
                android:id="@+id/Clean"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButtonClean"
                android:text="C"
                android:textColor="#FF5722"
                android:textSize="18dp" />

            <Button
                android:id="@+id/Grados"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButtonGrados"
                android:text="DEG"
                android:textSize="18dp"
                android:textColor="#080808" />
            <Button
                android:id="@+id/Radianes"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButtonRadianes"
                android:text="RAD"
                android:textSize="18dp"
                android:textColor="#080808" />


            <Button
                android:id="@+id/Divide"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButtonDiv"
                android:text="/"
                android:textSize="18dp"
                android:textColor="#FF5722" />



            <Button
                android:id="@+id/Siete"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButton7"
                android:text="7"
                android:textSize="18dp"
                android:textColor="#FAFAFA" />

            <Button
                android:id="@+id/Ocho"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButton8"
                android:text="8"
                android:textSize="18dp"
                android:textColor="#FAFAFA" />

            <Button
                android:id="@+id/Nueve"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButton9"
                android:text="9"
                android:textSize="18dp"
                android:textColor="#FAFAFA" />

            <Button
                android:id="@+id/Resta"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButtonResta"
                android:text="-"
                android:textSize="18dp"
                android:textColor="#FF5722" />

            <Button
                android:id="@+id/Cuatro"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButton4"
                android:text="4"
                android:textSize="18dp"
                android:textColor="#FAFAFA" />

            <Button
                android:id="@+id/Cinco"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButton5"
                android:text="5"
                android:textSize="18dp"
                android:textColor="#FAFAFA" />

            <Button
                android:id="@+id/Seis"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButton6"
                android:text="6"
                android:textSize="18dp"
                android:textColor="#FAFAFA" />

            <Button
                android:id="@+id/Suma"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButtonSuma"
                android:text="+"
                android:textSize="18dp"
                android:textColor="#FF5722" />

            <Button
                android:id="@+id/Uno"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="#424242"
                android:onClick="pressButton1"
                android:text="1"
                android:textColor="#FAFAFA"
                android:textSize="18dp" />

            <Button
                android:id="@+id/Dos"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButton2"
                android:text="2"
                android:textSize="18dp"
                android:textColor="#FAFAFA" />

            <Button
                android:id="@+id/Tres"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButton3"
                android:text="3"
                android:textSize="18dp"
                android:textColor="#FAFAFA" />
            <Button
                android:id="@+id/Multiplica"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButtonMult"
                android:text="X"
                android:textSize="18dp"
                android:textColor="#FF5722" />



            <Button
                android:id="@+id/Cero"
                android:layout_gravity="fill"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButton0"
                android:text="0"
                android:textSize="18dp"
                android:textColor="#FAFAFA" />


            <Button
                android:id="@+id/Seno"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButtonSeno"
                android:text="SIN"
                android:textSize="18dp"
                android:textColor="#FDFF00" />
            <Button
                android:id="@+id/Coseno"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButtonCoseno"
                android:text="COS"
                android:textSize="18dp"
                android:textColor="#FDFF00" />
            <Button
                android:id="@+id/Tangente"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButtonTangente"
                android:text="TAN"
                android:textSize="18dp"
                android:textColor="#FDFF00" />
            <Button
                android:id="@+id/Igual"
                android:layout_gravity="fill"
                android:layout_margin="2dp"
                android:background="#424242"
                android:onClick="pressButtonIgual"
                android:layout_rowSpan="2"
                android:layout_columnSpan="4"
                android:textSize="36dp"
                android:text="="
                android:textColor="#FF5722" />


        </GridLayout>
    </RelativeLayout>